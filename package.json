{
  "name": "@zazen/conventional-changelog",
  "description": "Generate a change log, free of weariness and confusion",
  "license": "ISC",
  "author": "Jeff <rustyangel@gmail.com> (https://tidaltheory.co)",
  "homepage": "https://github.com/stormwarning/zazen-conventional-changelog",
  "repository": "stormwarning/zazen-conventional-changelog",
  "version": "0.0.0",
  "bin": {
    "release-notes": "bin/cli.js"
  },
  "files": [
    "conventional-changelog.js",
    "conventional-recommended-bump.js",
    "index.js",
    "parser-opts.js",
    "templates",
    "writer-opts.js"
  ],
  "scripts": {
    "lint": "npm-run-all lint:*",
    "lint:markdown": "remark . -qo",
    "lint:scripts": "prettier-eslint '**/*.js' --list-different",
    "release": "bin/cli.js",
    "test": "mocha --timeout=30000"
  },
  "dependencies": {
    "@zazen/commit-types": "^2.0.0",
    "chalk": "^2.4.1",
    "compare-func": "^1.3.2",
    "conventional-changelog": "^2.0.3",
    "conventional-recommended-bump": "^4.0.1",
    "figures": "^2.0.0",
    "fs-access": "^1.0.1",
    "lodash.capitalize": "^4.2.1",
    "q": "^1.4.1"
  },
  "devDependencies": {
    "@zazen/eslint-config": "^0.3.0",
    "better-than-before": "^1.0.0",
    "chai": "^4.2.0",
    "conventional-changelog-core": "^3.1.0",
    "git-dummy-commit": "^1.3.0",
    "husky": "^1.1.2",
    "istanbul": "^0.4.5",
    "lint-staged": "^7.3.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "remark-cli": "^6.0.0",
    "remark-contributors": "^3.1.0",
    "remark-github": "^7.0.4",
    "remark-preset-lint-markdown-style-guide": "^2.1.2",
    "remark-toc": "^5.0.0",
    "shelljs": "^0.8.2",
    "through2": "^2.0.3"
  },
  "keywords": [
    "conventional-changelog",
    "preset"
  ],
  "husky": {
    "hooks": {
      "_pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.md": [
      "remark . -qo",
      "git add"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-markdown-style-guide",
      [
        "lint-maximum-line-length",
        false
      ],
      [
        "lint-list-item-spacing",
        false
      ],
      "contributors",
      "github",
      "toc"
    ],
    "settings": {
      "commonmark": true,
      "bullet": "-",
      "listItemIndent": 1,
      "rule": "-",
      "ruleSpaces": false,
      "strong": "*",
      "emphasis": "*"
    }
  }
}
