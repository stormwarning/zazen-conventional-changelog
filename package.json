{
  "name": "@zazen/conventional-changelog",
  "description": "Generate a change log, free of weariness and confusion",
  "license": "ISC",
  "author": "Jeff <rustyangel@gmail.com> (https://tidaltheory.co)",
  "homepage": "https://github.com/stormwarning/zazen-conventional-changelog",
  "repository": "stormwarning/zazen-conventional-changelog",
  "version": "1.0.5",
  "main": "index.js",
  "bin": {
    "release-notes": "bin/cli.js"
  },
  "files": [
    "bin",
    "conventional-changelog.js",
    "conventional-recommended-bump.js",
    "lib",
    "parser-opts.js",
    "templates",
    "writer-opts.js"
  ],
  "scripts": {
    "_release": "bin/cli.js",
    "lint": "npm-run-all lint:*",
    "lint:markdown": "remark .",
    "lint:scripts": "prettier-eslint '**/*.js' --list-different",
    "semantic-release": "semantic-release",
    "test": "mocha --timeout=30000"
  },
  "dependencies": {
    "@zazen/commit-types": "^2.0.0",
    "chalk": "^2.4.1",
    "compare-func": "^1.3.2",
    "conventional-changelog": "^3.0.5",
    "conventional-recommended-bump": "^4.0.1",
    "figures": "^2.0.0",
    "fs-access": "^2.0.0",
    "lodash.capitalize": "^4.2.1",
    "q": "^1.4.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.4",
    "@zazen/eslint-config": "^1.0.0",
    "better-than-before": "^1.0.0",
    "chai": "^4.2.0",
    "conventional-changelog-core": "^4.0.2",
    "eslint": "^5.12.1",
    "git-dummy-commit": "^1.3.0",
    "husky": "^1.1.2",
    "istanbul": "^0.4.5",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "remark-cli": "^6.0.0",
    "remark-github": "^7.0.4",
    "remark-preset-lint-markdown-style-guide": "^2.1.2",
    "remark-toc": "^5.0.0",
    "semantic-release": "^15.10.8",
    "shelljs": "^0.8.2",
    "through2": "^3.0.0",
    "travis-deploy-once": "^5.0.9"
  },
  "keywords": [
    "conventional-changelog",
    "preset",
    "semantic-release"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all"
  },
  "release": {
    "config": "./index.js",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": "./lib/release-rules.js"
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogTitle": "./lib/changelog-title.js"
        }
      ],
      [
        "@semantic-release/git",
        {
          "message": "ðŸ“š Add ${nextRelease.version} release notes [skip ci]"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "message": "ðŸ”– Release ${nextRelease.version} [skip ci]"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-markdown-style-guide",
      [
        "lint-maximum-line-length",
        false
      ],
      [
        "lint-list-item-spacing",
        false
      ],
      "github",
      "toc"
    ],
    "settings": {
      "commonmark": true,
      "bullet": "-",
      "listItemIndent": 1,
      "rule": "-",
      "ruleSpaces": false,
      "strong": "*",
      "emphasis": "*"
    }
  }
}
